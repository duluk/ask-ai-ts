{
  "name": "ask-ai-ts",
  "version": "0.0.3",
  "description": "CLI tool for asking LLMs questions without a GUI (TypeScript version)",
  "type": "module",
  "main": "dist/src/cli/index.js",
  "bin": "dist/src/cli/index.js",
  "pkg": {
    "assets": [
      "node_modules/@anthropic-ai/**/*",
      "node_modules/@google/**/*",
      "node_modules/openai/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/axios/**/*",
      "node_modules/ink/**/*",
      "node_modules/react/**/*"
    ],
    "targets": [
      "node18-linux",
      "node18-macos",
      "node18-win"
    ],
    "scripts": [
      "dist/src/**/*.js"
    ],
    "outputPath": "dist/bin"
  },
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build && npm run package",
    "start": "node dist/src/cli/index.js",
    "dev": "ts-node-esm src/cli/index.ts",
    "tui": "node standalone-tui.js",
    "tui:old": "node tui-standalone.js",
    "tui:esm": "node tui-esm.mjs",
    "tui:direct": "node direct-tui.js",
    "tui:dev": "ts-node --esm src/tui-entry.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "postinstall": "npm run build",
    "package": "pkg . --no-bytecode",
    "install-app": "npm run build && npm install -g",
    "install-local": "npm run package && cp dist/bin/ask-ai-ts-linux ~/.local/bin/ask-ai-ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.18.0",
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.6.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ink": "^5.1.1",
    "openai": "^4.0.0",
    "react": "^18.3.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/ink": "^2.0.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/react": "^19.0.10",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
